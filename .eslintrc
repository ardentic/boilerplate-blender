{
 "ecmaFeatures": {
    "modules": true
  },

  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },

  "rules": {
    "brace-style": [2, "1tbs"],
    "camelcase": [2, { "properties": "always" }],
    "comma-dangle": 2,
    "curly": 2,
    "dot-location": [2, "property"],
    "eqeqeq": 2,
    "handle-callback-err": [2, "always"],
    "indent": [2, 2, {"SwitchCase": 1}],
    "max-len": [2, 115, 1],
    "no-cond-assign": 2,
    "no-constant-condition": 2,
    "no-control-regex": 2,
    "no-dupe-args": 2,
    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-else-return": 2,
    "no-empty": 2,
    "no-empty-character-class": 2,
    "no-ex-assign": 2,
    "no-extra-boolean-cast": 2,
    "no-extra-semi": 2,
    "no-func-assign": 2,
    "no-inner-declarations": 2,
    "no-invalid-regexp": 2,
    "no-irregular-whitespace": 2,
    "no-lonely-if": 2,
    "no-multiple-empty-lines": [2, { "max": 1 }],
    "no-negated-in-lhs": 2,
    "no-obj-calls": 2,
    "no-param-reassign": 2,
    "no-plusplus": 2,
    "no-regex-spaces": 2,
    "no-self-compare": 2,
    "no-sparse-arrays": 2,
    "no-undef": 2,
    "no-unreachable": 2,
    "no-unused-vars": 2,
    "object-curly-spacing": [2, "always"],
    "quotes": [2, "single"],
    "radix": 2,
    "semi": [2, "always"],
    "space-after-keywords": [2, "always"],
    "space-before-blocks": [2, "always"],
    "space-before-function-paren": [2, "always"],
    "space-in-parens": [2, "never"],
    "space-infix-ops": 2,
    "strict": [2, "global"],
    "use-isnan": 2,
    "valid-typeof": 2
  }
}
